{
  "manifest_version": 3,
  "name": "Side Scroller",
  "version": "1.1.0",
  "description": "Navigate web pages using arrow keys with intelligent detection of next/previous page elements",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Side Scroller"
  }
} 