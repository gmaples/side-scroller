{
  "manifest_version": 3,
  "name": "Side Scroller",
  "version": "1.2.0",
  "description": "Navigate web pages using arrow keys with intelligent detection of next/previous page elements",
  
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon.svg"
  },
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "type": "module"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Side Scroller",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "48": "icons/icon-48.svg",
      "128": "icons/icon.svg"
    }
  }
} 